<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="800.0" spacing="15.0" style="-fx-background-color: #f5f8fa;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.emailprojectjavafx.UserProfileViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="629.0" spacing="10.0">
            <children>
                <Label text="USER PROFILE" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <effect>
                        <DropShadow color="#00000022" radius="2.0" />
                    </effect>
                </Label>
            </children>
        </HBox>

        <!-- Panel principal - Contenedor principal -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <effect>
                <DropShadow color="#00000033" radius="4.0" />
            </effect>

            <children>
                <!-- Sección superior con Avatar y botones de acción -->
                <HBox alignment="CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                    <children>
                        <!-- Panel izquierdo con Avatar -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <!-- Contenedor del Avatar con efecto circular -->
                            <StackPane>
                                <Circle fx:id="circleClip" fill="WHITE" radius="70.0" />
                                <ImageView fx:id="imgAvatar" fitHeight="140.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/images/user_placeholder.png" />
                                    </image>
                                    <effect>
                                        <DropShadow color="#00000033" radius="5.0" />
                                    </effect>
                                </ImageView>
                            </StackPane>
                            <Button fx:id="btnChangeAvatar" mnemonicParsing="false" onAction="#onChangeAvatarClick" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 4;" text="Change Avatar">
                                <font>
                                    <Font size="12.0" />
                                </font>
                            </Button>
                        </VBox>

                        <!-- Panel central con información de usuario -->
                        <VBox alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="ALWAYS">
                            <Label fx:id="lblUsername" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="username" textFill="#2c3e50" />

                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <children>
                                    <Label style="-fx-font-weight: bold;" text="Role:" />
                                    <Label fx:id="lblRole" text="admin/physio/patient">
                                        <styleClass>
                                            <String fx:value="role-badge" />
                                        </styleClass>
                                        <padding>
                                            <Insets bottom="2.0" left="10.0" right="10.0" top="2.0" />
                                        </padding>
                                        <style>
                                            -fx-background-color: #3498db;
                                            -fx-text-fill: white;
                                            -fx-background-radius: 10;
                                        </style>
                                    </Label>
                                </children>
                            </HBox>

                            <Label fx:id="lblLastLogin" text="Last login: 15/05/2025 15:30" textFill="#7f8c8d" />
                        </VBox>

                        <!-- Panel de botones de acción -->
                        <VBox alignment="TOP_RIGHT" spacing="10.0" />
                    </children>
                </HBox>

                <Separator />

                <!-- Sección central - Detalles del perfil -->
                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                    <Label text="Account Information" textFill="#3498db">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>

                    <GridPane hgap="20.0" vgap="15.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>

                        <Label style="-fx-font-weight: bold;" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="lblLoginId" text="username123" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label style="-fx-font-weight: bold;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="lblEmail" text="user@example.com" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-weight: bold;" text="Account Created:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="lblCreatedAt" text="01/01/2025" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-weight: bold;" text="Account Status:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <Circle fill="#2ecc71" radius="5" />
                            <Label text="Active" />
                        </HBox>
                    </GridPane>
                </VBox>

                <Separator />

                <!-- Sección inferior - Permisos según rol -->
                <VBox spacing="15.0">
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                    <Label text="Permissions" textFill="#3498db">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>

                    <FlowPane fx:id="permissionsContainer" hgap="10.0" vgap="10.0">
                        <children>
                            <!-- Aquí se insertarán dinámicamente los permisos según el rol -->
                            <Label style="-fx-background-color: #ecf0f1; -fx-padding: 5 10; -fx-background-radius: 15;" text="View Users" />
                            <Label style="-fx-background-color: #ecf0f1; -fx-padding: 5 10; -fx-background-radius: 15;" text="Manage Patients" />
                            <Label style="-fx-background-color: #ecf0f1; -fx-padding: 5 10; -fx-background-radius: 15;" text="Send Emails" />
                            <Label style="-fx-background-color: #ecf0f1; -fx-padding: 5 10; -fx-background-radius: 15;" text="Schedule Appointments" />
                        </children>
                    </FlowPane>
                </VBox>
            </children>
        </VBox>

        <!-- Barra inferior con botones de acción -->
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnLogout" onAction="#onLogoutClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;" text="Logout">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <effect>
                        <DropShadow color="#00000033" radius="3.0" />
                    </effect>
                </Button>
                <Button fx:id="btnBack" onAction="#onBackButtonClick" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4;" text="Back">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <effect>
                        <DropShadow color="#00000033" radius="3.0" />
                    </effect>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
